[user]
    name =
    email =
[color]
    ui = auto

[core]
    editor = vim
    pager = less -r

[http]
    sslVerify = false

[alias]
    co   = checkout
    ci   = commit
    st   = status --short
    ft   = fetch
    br   = branch
    df   = diff
    dfc  = diff --cached
    dfw  = diff --color-words
    dfwc = diff --color-words --cached
    l    = log --pretty=format:\"%h %ar\t(%an)\t: %s\" --date=short -20
    lg   = log --pretty=format:\"%h %ar\t(%an)\t: %s\" --date=short -20 --graph

[branch "master"]
    merge  = refs/heads/master
    remote = origin

[merge]
    tool = origin

[ghq]
    root = ~/src
